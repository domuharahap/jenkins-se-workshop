{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Dynatrace SE Bootcamp - Jenkins Pipeline",

    "Parameters":{
		"KeyName": {
            "Description": "Name of Existing EC2 Key Pair which we will use to launch new EC2 Instances",
            "Type": "AWS::EC2::KeyPair::KeyName",
            "ConstraintDescription": "Must be the name of an existing Key Pair",
            "MinLength" : "1",
            "MaxLength" : "255"
        }
    },

    "Mappings": {
        "RegionMap": {
            "cn-north-1" : {
                "AMI" : "ami-079242a19f11f2532"
            }
        }
    },

    "Resources": {
        "ProductionInstance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": {
					"Fn::FindInMap": [
						"RegionMap",
						{
							"Ref": "AWS::Region"
						},
						"AMI"
					]
				},
                "InstanceType": "t2.medium",
                "BlockDeviceMappings" : [
                    {
                       "DeviceName" : "/dev/sda1",
                       "Ebs" : { "VolumeSize" : "30" }
                    }
                ],
                "KeyName":  {
					"Ref": "KeyName"
				    },
                "SecurityGroups": [
					"JenkinsWorkshopSG"
				],
                "Tags": [{
                        "Key": "Purpose",
                        "Value": "SEBootcampJenkins"
                    }
                ],
                "UserData": {
                }
            }
        }
      },
	"Outputs": {
		"MyStackRegion": {
			"Value": {
				"Ref": "AWS::Region"
			},
			"Description": "The region where the stack was created."
		},
		"JenkinsUI": {
			"Value": {
				"Fn::Join":[
					"",
					[
						"http://",
						{
							"Fn::GetAtt": [
								"ProductionInstance",
								"PublicDnsName"
							]
						},
						":24711"
					]
				]
			},
			"Description": "Endpoint for Jenkins UI"
		},
		"ApplicationDevURL":{
			"Value": {
				"Fn::Join":[
					"",
					[
						"http://",
						{
							"Fn::GetAtt": [
								"ProductionInstance",
								"PublicDnsName"
							]
						},
						":3000"
					]
				]
			},
			"Description": "Endpoint for SampleNodejsApp in Dev"
        },
        "ApplicationProductionURL":{
			"Value": {
				"Fn::Join":[
					"",
					[
						"http://",
						{
							"Fn::GetAtt": [
								"ProductionInstance",
								"PublicDnsName"
							]
						},
						":3001"
					]
				]
			},
			"Description": "Endpoint for SampleNodejsApp in Production"
		}
	}
}
